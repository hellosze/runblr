<h2> Profile page for: <%= @user.username %></h2>

<% unless @user == current_user %>
  <table>
      <tr>
        <td><%= @user.username %></td>
      <% if current_user && current_user.followed_users.include?(@user) %>
        <td><%= button_to "Unfollow", user_follow_url(@user.id, current_user.id), method: :delete %></td>
      <% else %>
        <td><%= button_to "Follow", user_follows_url(@user.id) %></td>
      <% end %>
        </tr>
  </table>
<% end %>

<%= render "posts/show_template", user: @user %>