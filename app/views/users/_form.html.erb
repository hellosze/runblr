<form action="<%= provided_url %>" method="post">
  <label for="user_username">Username</label>
  <input
    type="text"
    name="user[username]"
    value="<%= user.username %>"
    id="user_username">

  <label for="user_password">Password</label>
  <input
    type="password"
    name="user[password]"
    id="user_password">

  <input type="submit">
</form>